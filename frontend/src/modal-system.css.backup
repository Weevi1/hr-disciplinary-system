/* üé≠ LOADING STATES & ANIMATIONS */
/* ============================================= */

@keyframes subtle-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

@keyframes smooth-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.wizard-loading {
  animation: subtle-pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.wizard-spinner {
  animation: smooth-spin 1s linear infinite;
}

/* Loading spinner for buttons */
.modal-footer__button .wizard-spinner {
  width: 16px !important;
  height: 16px !important;
  border: 2px solid transparent !important;
  border-top: 2px solid currentColor !important;
  border-radius: 50% !important;
}

/* ============================================= */
/* üìÖ DATE INPUT STYLING - ENHANCED CALENDAR */
/* ============================================= */

/* Date input field improvements */
.enhanced-warning-wizard-container input[type="date"],
.enhanced-warning-wizard-container input[type="time"] {
  /* Enhanced visual styling */
  background-color: var(--color-input-background) !important;
  border: 1px solid var(--color-input-border) !important;
  color: var(--color-text) !important;
  font-weight: 500 !important;
  letter-spacing: 0.025em !important;

  /* Improved hover and focus states */
  transition: all 0.2s ease !important;
}

.enhanced-warning-wizard-container input[type="date"]:hover,
.enhanced-warning-wizard-container input[type="time"]:hover {
  border-color: var(--color-primary) !important;
  box-shadow: 0 0 0 1px var(--color-primary-light) !important;
}

.enhanced-warning-wizard-container input[type="date"]:focus,
.enhanced-warning-wizard-container input[type="time"]:focus {
  outline: none !important;
  border-color: var(--color-primary) !important;
  box-shadow: 0 0 0 2px var(--color-primary-light) !important;
  background-color: var(--color-card-background) !important;
}

/* Date picker calendar icon styling */
.enhanced-warning-wizard-container input[type="date"]::-webkit-calendar-picker-indicator,
.enhanced-warning-wizard-container input[type="time"]::-webkit-calendar-picker-indicator {
  background-color: var(--color-primary) !important;
  border-radius: 4px !important;
  cursor: pointer !important;
  padding: 4px !important;
  margin-right: 4px !important;
  opacity: 0.8 !important;
  transition: opacity 0.2s ease !important;
}

.enhanced-warning-wizard-container input[type="date"]::-webkit-calendar-picker-indicator:hover,
.enhanced-warning-wizard-container input[type="time"]::-webkit-calendar-picker-indicator:hover {
  opacity: 1 !important;
  background-color: var(--color-primary) !important;
}

/* Date input text styling for better readability */
.enhanced-warning-wizard-container input[type="date"]::-webkit-datetime-edit,
.enhanced-warning-wizard-container input[type="time"]::-webkit-datetime-edit {
  color: var(--color-text) !important;
  font-weight: 500 !important;
}

.enhanced-warning-wizard-container input[type="date"]::-webkit-datetime-edit-fields-wrapper,
.enhanced-warning-wizard-container input[type="time"]::-webkit-datetime-edit-fields-wrapper {
  color: var(--color-text) !important;
}

.enhanced-warning-wizard-container input[type="date"]::-webkit-datetime-edit-text,
.enhanced-warning-wizard-container input[type="time"]::-webkit-datetime-edit-text {
  color: var(--color-text-secondary) !important;
  font-weight: 400 !important;
}

/* Placeholder styling for empty date inputs */
.enhanced-warning-wizard-container input[type="date"]:invalid,
.enhanced-warning-wizard-container input[type="time"]:invalid {
  color: var(--color-text-tertiary) !important;
}

/* Mobile-specific date input improvements */
@media screen and (max-width: 768px) {
  .enhanced-warning-wizard-container input[type="date"],
  .enhanced-warning-wizard-container input[type="time"] {
    font-size: 16px !important; /* Prevents zoom on iOS */
    min-height: 48px !important; /* Better touch targets */
  }

  .enhanced-warning-wizard-container input[type="date"]::-webkit-calendar-picker-indicator,
  .enhanced-warning-wizard-container input[type="time"]::-webkit-calendar-picker-indicator {
    padding: 6px !important;
    margin-right: 6px !important;
  }
}